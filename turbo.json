{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "package#build": {
      "dependsOn": ["build", "types", "theme", "lint:dist"],
      "outputs": ["dist/**", ".vuepress/dist/**"]
    },
    "docs#build": {
      "dependsOn": ["^build"],
      "outputs": [".vuepress/dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
