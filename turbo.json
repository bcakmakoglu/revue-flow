{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "types", "theme"],
      "outputs": ["dist/**"]
    },

    "types": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "theme": {
      "outputs": ["dist/**"]
    },

    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },

    "release": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    }
  }
}
