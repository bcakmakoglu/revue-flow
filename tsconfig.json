{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2020",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "@types/node"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
